#!/bin/bash

#activate python 3.6
source activate py36

fractions=(0.05 0.10 0.20 0.30 0.50 1.0)
beta=("beta_blundell" "beta_standard" "beta_standard" "beta_none")

# run beta test
for beta_name in "${beta[@]}"
do
    echo "Running with $beta_name"
    python experiment.py with $beta_name
done


# run full domain A (used for transfer)
python experiment.py with domain_a

# train model on domain B using fraction (without transfer)
for frac in "${fractions[@]}"
do
    python experiment.py with domain_b "experiment_name=results/domainB_frac_${frac}" "fraction=$frac"
done

# train model on domain B using fraction (WITH transfer)
for frac in "${fractions[@]}"
do
    python experiment.py with transfer "experiment_name=results/transfer_frac_${frac}" "fraction=$frac"
done

